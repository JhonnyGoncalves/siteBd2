@model List<SiteBD.Areas.Painel.Models.Area>
           <h2 style="padding:20px">Categorias</h2>
<a href="~/Painel/Inicio/CadastroArea">Cadastrar Area</a>
<a href="~/Painel/Inicio/PainelControle">Empresas</a>
<div class="col-md-12">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
            </tr>
        </thead>


        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>
                    <a class="btn btn-default btn-sm" href="@Url.Action("EditarArea",new {id=item.Id})" title="Editar">
                        <i class="glyphicon glyphicon-pencil"> </i>
                    </a>
                    <a class="btn btn-default btn-sm" href="@Url.Action("DetalheArea",new {id=item.Id})" title="Informações">
                        <i class="glyphicon glyphicon-align-justify"> </i>
                    </a>
                    <a class="btn btn-default btn-sm" href="@Url.Action("ExcluirArea",new {id=item.Id})" title="Deletar">
                        <i class="glyphicon glyphicon-remove text-danger"> </i>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>